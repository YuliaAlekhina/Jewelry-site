    body
        div.wrapper
            include modules/header
                div.smart-basket__wrapper
            section.home
                div.home__photo-all
                    div.home__photo-first.foto
                        img(src="../img/photo-1.jpg", alt="Фото-1")
                    div.home__photo-second.foto
